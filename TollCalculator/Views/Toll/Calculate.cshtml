@model TollCalculator.Models.Vehicle

@{
    ViewData["Title"] = "Calculate";
}

<h1>Calculate</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calculate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehicleType" class="control-label"></label>
                @Html.DropDownList("VehicleType")
                <span asp-validation-for="VehicleType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasETag" /> @Html.DisplayNameFor(model => model.HasETag)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Charge" class="control-label"></label>
                @Html.DisplayFor(model => model.Charge)
                <span asp-validation-for="Charge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
